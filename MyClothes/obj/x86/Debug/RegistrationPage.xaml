<Page
    x:Class="MyClothes.RegistrationPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MyClothes"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.Background>
            <ImageBrush Stretch="UniformToFill" ImageSource="Assets/l_blur.jpg"/>
        </Grid.Background>
        <Grid Background="#FF0F0E0E" Opacity="0.44" VerticalAlignment="Stretch">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <Grid>
                    <TextBlock TextWrapping="WrapWholeWords" HorizontalAlignment="Left" Text="Username:" FontSize="20"  Width="118" Foreground="Black"    />
                    <TextBox  HorizontalAlignment="Right"   Text="" FontSize="20"   TextWrapping="Wrap"    Height="35" Width="110"  FontWeight="Bold"  />
                </Grid>

                <Grid>
                    <TextBlock TextWrapping="WrapWholeWords" HorizontalAlignment="Left"   Text="Password:" FontSize="20"  Width="118" Foreground="Black"    />
                    <TextBox  HorizontalAlignment="Right"   Text="" FontSize="20"   TextWrapping="Wrap"    Height="35" Width="110"  FontWeight="Bold" />
                </Grid>
                <Grid>
                    <TextBlock TextWrapping="WrapWholeWords" HorizontalAlignment="Left"  Text="Name:" FontSize="20"  Width="118" Foreground="#FF060606"    />
                    <TextBox x:ConnectionId='3'  FontWeight="Bold" HorizontalAlignment="Right"   Text="" FontSize="20"   TextWrapping="Wrap"    Height="35" Width="110"                                     />
                </Grid>
                <Grid>
                    <TextBlock  TextWrapping="WrapWholeWords" HorizontalAlignment="Left"  Text="Surname:" FontSize="20"  Width="118"  Height="36" VerticalAlignment="Top" Foreground="Black"  />
                    <TextBox  FontWeight="Bold" HorizontalAlignment="Right" Text="" FontSize="20"   TextWrapping="Wrap" Width="110"  VerticalAlignment="Top" Height="36"  />
                </Grid>
                <Grid>
                    <ToggleSwitch x:ConnectionId='2'                                 OffContent="Male" OnContent="Female"  Grid.Row="4"  Height="98" VerticalAlignment="Top"  Foreground="Black" Margin="1,3.167,-1,0" FontFamily="Global User Interface"  />
                </Grid>
                <Grid>
                    <AppBarButton  Visibility="Visible" Icon="Cancel" Label=""  Height="75"  Width="115"  HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
                    <AppBarButton Visibility="Visible"  Icon="Accept" Label=""  Height="80"  Width="110" HorizontalAlignment="Left" VerticalAlignment="Bottom"/>
                </Grid>


            </StackPanel>

            <AppBarButton x:ConnectionId='1' HorizontalAlignment="Left" Icon="Back" Label="" VerticalAlignment="Bottom"                           />
        </Grid>
    </Grid>
</Page>

